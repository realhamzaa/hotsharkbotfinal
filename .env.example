# HOT SHARK Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-app-name.onrender.com
ADMIN_USER_ID=your_telegram_user_id

# Database Configuration
DATABASE_URL=sqlite:///./hot_shark_bot.db

# Security
SECRET_KEY=your_secret_key_here

# Environment
ENVIRONMENT=development

# Exness Configuration (Primary Data Source)
EXNESS_LOGIN=your_exness_login_number
EXNESS_PASSWORD=your_exness_password
EXNESS_SERVER=Exness-MT5Trial

# API Keys (Optional - for enhanced features)
TWELVE_DATA_API_KEY=your_twelve_data_api_key
POLYGON_API_KEY=your_polygon_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# Trading Configuration
DEFAULT_RISK_PERCENTAGE=2.0
MAX_DAILY_TRADES=10

# ML Model Configuration
MODEL_UPDATE_INTERVAL_HOURS=24
MIN_TRAINING_DATA_POINTS=1000

# Notification Configuration
ENABLE_NOTIFICATIONS=True
NOTIFICATION_CHANNELS=telegram

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=hot_shark_bot.log

# Server Configuration
PORT=8000

